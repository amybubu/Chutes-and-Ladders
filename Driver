import java.awt.Color;
import java.awt.Insets;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.event.MouseMotionListener;
import java.io.File;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.Timer;

public class Driver extends JPanel implements ActionListener, MouseListener, MouseMotionListener, KeyListener{
	
	public GameScreen game;
	
	JButton startButton = new JButton("Start");
	String startB = "StartButton1.gif";
	
	String start = "StartScreen1.png";
	JLabel startScreen;
	
	
	
	JFrame f;
	
	public Driver() {
		f = new JFrame();
		f.setSize(1000, 1029);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.getContentPane().setBackground(Color.black);
		f.setResizable(false);
		f.setLayout(null);
		
		String src = new File("").getAbsolutePath()+"/src/";
		ImageIcon startS = new ImageIcon(src+start);
		startScreen = new JLabel(startS);
		startScreen.setBounds(0,0,1000,1000);
		
		ImageIcon backg = new ImageIcon(src+startB);
		startButton = new JButton(backg);
		
		//start button setup
		startButton.setBounds(600,800,200,100);
		f.add(startButton);
		startButton.addActionListener(this);
		startButton.add(startScreen);
		startButton.setMargin(new Insets(0,0,0,0));
		startButton.setOpaque(false);
		startButton.setContentAreaFilled(false);
		startButton.setBorderPainted(false);
		startButton.setBorder(null);
				
		f.addMouseListener(this);
		f.addKeyListener(this);
		f.addMouseMotionListener(this);
		
		f.add(startScreen);
		
		t = new Timer(16, this);
		t.start();
		f.setVisible(true);
		
	}
	Timer t;
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Driver d = new Driver();
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		if(e.getSource() == startButton){
			System.out.println("start the game");
			game = new GameScreen();
			f.dispose();
		}
		/*
		if(e.getSource() == quit){
			System.exit(0);
		}
		*/
	}
	
	
	@Override
	public void keyPressed(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void keyReleased(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void keyTyped(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseDragged(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseMoved(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseClicked(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseEntered(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseExited(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mousePressed(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseReleased(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}


}
